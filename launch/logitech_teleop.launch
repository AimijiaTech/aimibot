<launch>
   <!--  smooths inputs from cmd_vel_mux/input/teleop_raw to cmd_vel_mux/input/teleop -->
   <include file="$(find turtlebot_teleop)/launch/includes/velocity_smoother.launch.xml"/>

   <node pkg="turtlebot_teleop" type="turtlebot_teleop_joy" name="turtlebot_teleop_joystick">
    <param name="scale_angular" value="1.5"/>
    <param name="scale_linear" value="0.5"/>
    <remap from="turtlebot_teleop_joystick/cmd_vel" to="teleop_velocity_smoother/raw_cmd_vel"/>
   </node>

  <node pkg="joy" type="joy_node" name="joystick"/>
  <node pkg="aimibot" type="aimibot" name="aimibot" output="screen">
    <param name="serial_port" value="/dev/ttyUSB0"/>
    <remap from="/aimibot/commands/velocity" to="/teleop_velocity_smoother/raw_cmd_vel"/>
  </node>
</launch>
